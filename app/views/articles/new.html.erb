<h1>New article</h1>
<%= form_with model: @article do |form| %>
    <div>
    <%= form.label :title %>
    <%= form.text_field :title %>  
    </div>
    <div>
    <%= form.label :description %>
    <%= form.text_area :description %>  
    </div>
    <div>
    <%= form.label :category %>
    <%= form.collection_select(:category_ids, Category.all,:id, :name,
      { prompt: "Make your selection"}, { multiple: true}) %>
    </div>
    <div>
    <%= form.submit%>
    </div>
<% end %>

<%= link_to 'Cancel', articles_path%>|
<%= link_to 'Category', categories_path%>
            